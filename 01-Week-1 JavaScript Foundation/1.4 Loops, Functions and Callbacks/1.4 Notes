// 4. Anonymous Function
// eg-1:
function square(n) {
    return n * n;
}


function sumOfSquaresCubes(a, b, fn) {
    let val1 = fn(a);
    let val2 = fn(b);
    return val1 + val2;
}

console.log(sumOfSquaresCubes(10, 2, function (n) {
    return n * n * n;
}));





